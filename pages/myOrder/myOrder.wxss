/* pages/myOrder/myOrder.wxss */

.wrapper {
}

.list {
  margin: 30rpx;
  padding: 40rpx 30rpx 30rpx;
  box-shadow: 5rpx 5rpx 5rpx #888;
}

.top {
  color: #000;
  font-weight: bold;
  background: #fff;
  align-items: center;
  font-size: 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
  padding-bottom: 20rpx;
}

.top text {
  flex: 7;
  font-size: 35rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.top view {
  flex: 1;
}

.top image {
  width: 30rpx;
  height: 30rpx;
  display: block;
  margin-right: 0;
  margin-left: auto;
}

.middle {
  padding: 30rpx 0;
  font-size: 25rpx;
  color: #9a9a9a;
}

.middle image {
  width: 30rpx;
  height: 30rpx;
  display: block;
  margin-right: 10rpx;
}

.middle .money {
  text-align: right;
  font-size: 30rpx;
  color: #ED6066;
  position: relative;
  top: -5rpx;
}

.bottom .pay {
  width: 100rpx;
  height: 70rpx;
  background: #09ba07;
  color: #fff;
  line-height: 70rpx;
  font-size: 30rpx;
  text-align: center;
  margin-right: 0;
  margin-left: auto;
}
